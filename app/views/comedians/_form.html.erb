<%= form_for(@comedian) do |f| %>
  <% if @comedian.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comedian.errors.count, "error") %> prohibited this comedian from being saved:</h2>

      <ul>
      <% @comedian.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input type="hidden" name="authenticy_token" value="<%= form_authenticity_token %>">
  <%= f.hidden_field :role, :value => "comedian"  %>

  <div class="input-field">
    <label for="user_username" class="">Username</label><br>
    <input type="text" name="user[username]" id="user_username" value="<%=@comedian.username%>">
  </div>
  <div class="input-field">
    <label for="user_email" data-error="wrong" data-success="right">Email</label><br>
    <input type="email" name="user[email]" id="user_email" class="validate" value="<%=@comedian.email%>">
  </div>
  <div class="input-field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="input-field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div><br/>
  <div class="input-field">
    <%= f.label :twitter, 'Twitter handle' %><br>
    <%= f.text_field :twitter %>
  </div>
  <div class="input-field">
    <%= f.label :facebook, 'Facebook handle' %><br>
    <%= f.text_field :facebook %>
  </div>
  <div class="input-field">
    <%= f.label :instagram, 'Instagram handle' %><br>
    <%= f.text_field :instagram %>
  </div>
  <div class="input-field">
    <%= f.label :youtube,'YouTube: Enter only what appears in a YouTube link AFTER the = sign at the end (ie: qFcG0pBhKPA)' %><br>
    <%= f.text_field :youtube %>
  </div>
  <div class="input-field">
    <%= f.label :podcast, 'Add a Direct Link to an mp3 for a podcast' %><br>
    <%= f.text_field :podcast %>
  </div>
  <div class="input-field">
    <%= f.label :podcast_title, 'Podcast Title' %><br>
    <%= f.text_field :podcast_title %>
  </div>
  <div class="input-field">
    <%= f.label :bio, :for => "textarea" %><br>
    <%= f.text_area :bio, :id => "textarea", :class => "materialize-textarea" %>
  </div>
  <div class="actions">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
  </div>
<% end %>
